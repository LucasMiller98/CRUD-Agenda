<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% for(let error of errors) { %>
          <%= error %> <br> 
        <% } %>
      </div>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success">
        <% for(let succ of success) { %>
          <%= succ %> <br> 
        <% } %>
      </div>
    </div>
  </div>
<% } %>
