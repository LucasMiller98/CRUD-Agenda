<%- include('includes/head')  %> 
<%- include('includes/nav')  %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages')  %> 
      
      <% if (contact._id) { %>
        <form action="/contact/edit/<%= contact.id %>" method="POST">
      <% } else { %>
        <form action="/contact/register" method="POST">
      <% } %>
      
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          
          <div class="mb-3">
            <label>Nome</label>
            <input 
              value="<%= contact.name %>"
              type="text" 
              class="form-control" 
              name="name"                
            >
          </div>

          <div class="mb-3">
            <label>Sobrenome</label>
            <input 
              value="<%= contact.surname %>"
              type="text" 
              class="form-control" 
              name="surname"                
            >
          </div>

          <div class="mb-3">
            <label>E-mail</label>
            <input 
              value="<%= contact.email %>"
              type="email" 
              class="form-control" 
              name="email"                
            >
          </div>

          <div class="mb-3">
            <label>Telefone</label>
            <input 
              value="<%= contact.phone %>"
              type="tel" 
              class="form-control" 
              name="phone"                
            >
          </div>
          
          
          <button 
            type="submit" 
            class="btn btn-primary"
          >
            Salvar
          </button>
        </form>
      
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')  %> 